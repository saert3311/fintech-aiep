<div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-4 col-md-5">
            <div class="card card-user">
              <div class="image">
              </div>
              <div class="content">
                <div class="author">
                  <h4 class="title"><%= current_user.fname %><br>
                  <%= current_user.lname %>
                  </h4>
                </div>
              </div>
              <hr>
              <div class="text-center">
                <div class="row">
                  <div class="col-md-6">
                    <h5>$ <%= current_user.money %><br><small>Cantidad Necesaria</small></h5>
                  </div>
                  <div class="col-md-6">
                    <h5><%= @prestado %><br><small>Cantidad Recaudada</small></h5>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-8 col-md-7">
            <div class="card">
              <div class="header">
                <h4 class="title text-center">Recaudaciones</h4>
                <p class="category text-center">Las personas que te han prestado dinero</p>
              </div>
              <div class="content table-responsive table-full-width">
                <table class="table table-striped text-center">
                  <thead>
                  <tr><th>Nombre</th>
                  <th>Email</th>
                  <th>Cantidad</th>
                  </tr></thead>
                  <tbody>
                  <% @prestamos.each do |prestamo| %>
                  <tr>
                    <td><%= prestamo.lender_id_id %></td>
                    <td><%= prestamo.lender_id_id.fname %></td>
                    <td><%= prestamo.amount %></td>
                  </tr>
                  <% end %>
                  </tbody>
                </table>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>